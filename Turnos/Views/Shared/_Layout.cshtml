<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Turnos</title>
    @*<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />*@
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Calendario Turnos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Admin Bocas", "Index", "Bocas", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Admin Tipo Transporte", "Index", "TransporteTipo", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Admin Calendario Planta", "Index", "CalendarioPlantas", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Admin Calendario detalle", "Index", "TrnCalendarioFeriadoDetalles", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Calendario de Feriados
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Nuevo Calendario", "Index", "Feriados", new { area = "" }, new { @class = "navbar-brand" })</li>
                            <li>@Html.ActionLink("Administrar Calendarios", "Index", "CalendarioFeriados", new { area = "" }, new { @class = "navbar-brand" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Módulo de Turnos</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>