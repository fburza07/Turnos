@model Turnos.Models.TrnCustomizacion

@{
    ViewData["Title"] = "Delete";
}

<h3>Esta seguro de eliminar la configuración?</h3>
<div>
    <h4>Admin. Dias Laborables</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Horario Mínimo
        </dt>
        <dd class="col-sm-10">
            @Model.HorarioMinimo.ToString("HH:mm")
        </dd>
        <dt class="col-sm-2">
            Horario Máximo
        </dt>
        <dd class="col-sm-10">
            @Model.HorarioMaximo.ToString("HH:mm")
        </dd>
        <dt class="col-sm-2">
            Obligatorio Cantidad Pallets
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EsObligatorioCantidadPallets)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Empid" />
        <input type="submit" value="Borrar" class="btn btn-danger" />        
    </form>
</div>
